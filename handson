
import java.io.Serializable;

public class Book implements Serializable {
    private String title;
    private String author;
    private String isbn;
    private transient double price; // transient prevents serialization

    // Constructor parameters ordered to match field declarations
    public Book(String title, String author, String isbn, double price) {
        this.title = title;
        this.author = author;
        this.isbn = isbn;
        this.price = price;
    }

    // Getter methods
    public String getTitle() { return title; }
    public String getAuthor() { return author; }
    public String getIsbn() { return isbn; }
    public double getPrice() { return price; }

    @Override
    public String toString() {
        return "Book{title='" + title + "', author='" + author + 
               "', isbn='" + isbn + "', price=" + price + "}";
    }
}


import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.IOException;

public class SerializationDemo {
    public static void main(String[] args) {
        // Create a Book object
        Book b1 = new Book("Effective Java", "Joshua Bloch", "978-0134685991", 45.99);
        System.out.println("Original Book Object:");
        System.out.println(b1);

        // Serialize the object
        try (ObjectOutputStream objOut = new ObjectOutputStream(new FileOutputStream("book.ser"))) {
            objOut.writeObject(b1);
            System.out.println("Serialization completed successfully.");
        } catch (IOException e) {
            System.err.println("Error during serialization: " + e.getMessage());
            e.printStackTrace();
        }

        // Deserialize the object
        try (ObjectInputStream objIn = new ObjectInputStream(new FileInputStream("book.ser"))) {
            Book b2 = (Book) objIn.readObject();
            System.out.println("Deserialization completed successfully.");
            System.out.println("Deserialized Book Details:");
            System.out.println(b2);
        } catch (IOException e) {
            System.err.println("Error during deserialization (I/O issue): " + e.getMessage());
            e.printStackTrace();
        } catch (ClassNotFoundException e) {
            System.err.println("Error: Book class definition not found during deserialization.");
            e.printStackTrace();
        }
    }
    /*Both the ouput are same except the price in orginal price will printed with value and after the deserialization it will print 0.0 as output and veriifed. */
}
